{
  "name": "roidle.com",
  "description": "Ragnarok Idle",
  "version": "0.4.5",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/maxtream/game"
  },
  "scripts": {
    "clean": "rm -rf ./public/*",
    "jslint": "node_modules/.bin/eslint ./src/**/*.{js,vue}",
    "stylelint": "node_modules/.bin/stylelint \"./**/*.scss\" --syntax scss",
    "webpack": "node_modules/.bin/webpack --progress --config webpack.config.js",
    "build": "yarn clean && yarn jslint && yarn stylelint && yarn webpack",
    "release": "git pull && yarn && yarn jslint && yarn stylelint && node_modules/.bin/webpack --config webpack.config.js --env.production",
    "watch": "node_modules/.bin/webpack-dev-server"
  },
  "dependencies": {
    "@babel/core": "7.9.6",
    "@babel/polyfill": "7.8.7",
    "@babel/preset-env": "7.9.6",
    "axios": "0.19.2",
    "babel-loader": "8.1.0",
    "babel-minify-webpack-plugin": "0.3.1",
    "bootstrap": "4.5.0",
    "copy-webpack-plugin": "6.0.1",
    "css-loader": "3.5.3",
    "cssnano": "4.1.10",
    "eslint": "7.0.0",
    "eslint-plugin-vue": "6.2.2",
    "express": "4.17.1",
    "hammerjs": "2.0.8",
    "html-webpack-harddisk-plugin": "1.0.1",
    "html-webpack-plugin": "4.3.0",
    "image-loader": "0.0.1",
    "mini-css-extract-plugin": "0.9.0",
    "node-sass": "4.14.1",
    "node-sass-glob-importer": "5.3.2",
    "postcss-loader": "3.0.0",
    "raw-loader": "4.0.1",
    "replace-in-file-webpack-plugin": "1.0.6",
    "sass": "1.26.5",
    "sass-loader": "8.0.2",
    "socket.io": "2.3.0",
    "stylelint": "13.4.0",
    "vue": "2.6.11",
    "vue-analytics": "5.22.1",
    "vue-i18n": "8.17.6",
    "vue-loader": "15.9.2",
    "vue-multiselect": "2.1.6",
    "vue-range-slider": "0.6.0",
    "vue-router": "3.1.6",
    "vue-template-compiler": "2.6.11",
    "vuex": "3.4.0",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.11.0"
  },
  "devDependencies": {
    "git-commit-msg": "0.3.0",
    "pre-commit": "1.2.2"
  },
  "pre-commit": [
    "jslint",
    "stylelint"
  ],
  "git-commit-hook": {
    "types": [
      "feat",
      "fix",
      "chore",
      "docs",
      "refactor",
      "style",
      "test",
      "revert",
      "merge"
    ],
    "lineLength": 120
  }
}
